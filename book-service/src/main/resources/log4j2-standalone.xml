<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="CA" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %c [%p] %m%n"/>
        </Console>
        <Socket name="logstash" host="localhost" port="9600">
            <JsonLayout compact="true" eventEol="true" />
        </Socket>
        <Async name="LogstashAsync" bufferSize="204800">
            <AppenderRef ref="logstash" />
        </Async>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="CA"/>
            <AppenderRef ref="LogstashAsync"/>
        </Root>
    </Loggers>
</Configuration>